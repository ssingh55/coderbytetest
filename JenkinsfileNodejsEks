pipeline {
    agent any

    environment {
        AWS_REGIONS = "us-east-1"
        APP_NAME = "nodejsapp"
        ECR_REPOSITORY = "coderbytetest"
        AWS_CREDENTIALS_ID = 'aws-credential'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        EKS_CLUSTER_NAME = "k8s-cluster"
    }

    triggers {
        pollSCM('*/5 * * * *')
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/ssingh55/coderbytetest.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run tests') {
            steps {
                sh 'npm test' || true
            }
        }

        stage('Configure AWS & LOgin to ECR') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: AWS_CREDENTIALS_ID,
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                )]) {
                    script {
                        def accountId = sh(script: 'aws sts get-caller-identity --query Account --output text', returnStdout: true).trim()
                        env.AWS_ACCOUNT_ID = accountId
                        env.ECR_REGISTRY = "${accountId}.dkr.ecr.${AWS_REGIONS}.amazonaws.com"
                        env.IMAGE_NAME = "${env.ECR_REGISTRY}/${ECR_REPOSITORY}"

                        sh "aws ecr get-login-password --region ${AWS_REGIONS} | docker login --username AWS --password-stdin ${env.ECR_REGISTRY}"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${env.IMAGE_NAME}:${env.IMAGE_TAG}")
                }
            }
        }

        stage('Push the image to ECR') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: AWS_CREDENTIALS_ID,
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                )]) {
                    script {
                        sh """
                            docker push ${env.IMAGE_NAME}:${IMAGE_TAG}
                            docker tag ${env.IMAGE_NAME}:${IMAGE_TAG} ${env.IMAGE_NAME}:latest
                            docker push ${env.IMAGE_NAME}:latest
                        """
                    }
                }
            }
        }

        stage('Configure Kubectl') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: AWS_CREDENTIALS_ID,
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                )]) {
                    script {
                        sh """
                            aws eks update-kubeconfig --name ${EKS_CLUSTER_NAME} --region ${AWS_REGIONS}
                        """
                    }
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                script {
                    sh """
                        sed -i 's|\${{ECR_REPOSITORY}}|${env.IMAGE_NAME}|g' k8s/deployment.yaml

                        kubectl apply -f k8s/deployment.yaml
                        // kubectl apply -f k8s/service.yaml
                        // kubectl apply -f k8s/configmap.yaml

                        kubectl rollout status deployment/${APP_NAME}
                    """
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
